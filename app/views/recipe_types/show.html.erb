<h1><%= @tipos_receitas.name %></h1>

<% if @tipos_receitas.recipes.empty? %>
  <p>Nenhuma receita encontrada para este tipo de receitas</p>
<% else %>
  <% @tipos_receitas.recipes.each do |receita| %>
    <div>
      <h1><%= receita.title %></h1>
      <ul>
        <li><%= receita.recipe_type.name %></li>
        <li><%= receita.cuisine.name %></li>
        <li><%= receita.difficulty %></li>
        <li><%= receita.cook_time %> minutos</li>
      </ul>
    </div>
  <% end %>
<% end %>

<%= link_to 'Voltar', root_path %>
