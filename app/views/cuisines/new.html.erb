<h1>Cadastrar uma cozinha</h1>
<% if @cuisine.errors.any? %>
  <div id="msg_errors">
    <% @cuisine.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<%= form_for @cuisine do |f| %>
  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>
<p>
  <%= link_to 'Voltar', root_path %>
</p>
