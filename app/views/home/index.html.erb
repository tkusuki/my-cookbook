<h1>My CookBook</h1>
<p>
  Bem-vindo ao maior livro de receitas online
</p>
<p>
  <%= link_to "Enviar uma receita", new_recipe_path %>  |
  <%= link_to "Cadastrar uma cozinha", new_cuisine_path %>  |
  <%= link_to "Cadatrar um tipo de receita", new_recipe_type_path %>
</p>
<hr>

<%= form_tag search_recipes_path, method: :get do %>
  <%= label_tag(:search, "Busca:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Buscar") %>
<% end %>

<hr>

<h2>Cozinha</h2>
<ul>
  <% @cuisines.each do |cuisine| %>
  <li><%= link_to cuisine.name, cuisine_path(cuisine.id) %></li>
  <% end %>
</ul>

<h2>Tipo</h2>
<ul>
  <% @recipe_types.each do |type| %>
  <li><%= link_to type.name, recipe_type_path(type.id) %></li>
  <% end %>
</ul>

<hr>
<p>
  <%= flash[:notice] %>
</p>
<p>
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
  <% end %>
</p>
